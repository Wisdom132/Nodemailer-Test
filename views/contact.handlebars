<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="card mx-auto shadow">
        <h1 class="text-center">
          Contact Form
        </h1>
        {{msg}}
        <div class="card-body">
          <form method="POST" action="send">
            <div class="form-group">
              <label for="name">
                Name
              </label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="e.g John Doe"
              />
            </div>
            <div class="form-group">
              <label for="company">
                Company
              </label>
              <input
                type="text"
                class="form-control"
                id="company"
                name="company"
                placeholder="e.g John Doe"
              />
            </div>
            <div class="form-group">
              <label for="email">
                Email
              </label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="e.g John Doe"
              />
            </div>
            <div class="form-group">
              <label for="Phone">
                Phone
              </label>
              <input
                type="text"
                class="form-control"
                id="Phone"
                name="phone"
                placeholder="e.g John Doe"
              />
            </div>
            <div class="form-group">
              <label for="Message">
                Message
              </label>
              <textarea
                name="message"
                class="form-control"
                id="Message"
                rows="3"
              ></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>